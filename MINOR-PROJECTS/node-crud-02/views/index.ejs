<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input type="text" class="block outline-none rounded-md px-5 py-2 bg-zinc-800" name="title" placeholder="Title goes here">
                <textarea class="block outline-none mt-2 px-5 py-2  rounded-md bg-zinc-800 resize-none" name="details" placeholder="Write your task details here"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Creat Task">
            </form>
        </div>
        <div class="tasks p-10 flex flex-wrap gap-3">
            <% if(files.length > 0){ %>
                <% files.reverse().forEach(function(val){ %>
                    <div class="task w-72 px-3  py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <div class="flex w-full justify-between items-center mt-3">
                            <a class="text-blue-600" href="/file/<%= val %>">Read More.</a>
                            <a class="text-red-600" href="/delete/<%= val %>">Delete</a>
                            <a class="text-blue-600" href="/edit/<%= val %>">Edit File</a>
                        </div>
                    </div>
                <% }) %> 
            <% } else{ %>
                <h3 class="text-zinc-600">no tasks yet.</h3>
           <% } %>
        </div>
    </div>

    <script src="/javascripts/script.js"></script>
</body>
</html>